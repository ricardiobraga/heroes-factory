{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node"],
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  
  "include": ["src", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
