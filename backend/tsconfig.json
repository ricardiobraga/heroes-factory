{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "jest"],
    "module": "commonjs",

    "rootDir": ".",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": "./",
      "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
  },

  "include": ["src", "prisma/**/*.ts", "tests/**/*.ts", "jest.setup.ts"],

  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
